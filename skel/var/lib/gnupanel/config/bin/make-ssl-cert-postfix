#export RANDFILE=/dev/random

echo $1
echo $2
echo $3

rm -f gnupanel.key
rm -f gnupanel.csr
rm -f gnupanel.crt
rm -f cakey.pem
rm -f cacert.pem

openssl genrsa -rand /etc/hosts -out gnupanel.key 1024

openssl req -config ${1} -new -key gnupanel.key -out gnupanel.csr -days ${3}

openssl x509 -req -in gnupanel.csr -signkey gnupanel.key -out gnupanel.crt -days ${3}

openssl req -new -x509 -extensions v3_ca -keyout cakey.pem -out cacert.pem -passout pass:${2} -days ${3} -config ${1}

cp -f -b gnupanel.key /etc/postfix/
cp -f -b gnupanel.crt /etc/postfix/
cp -f -b cacert.pem /etc/postfix/
chown root:postfix /etc/postfix/gnupanel.key
chown root:postfix /etc/postfix/gnupanel.crt
chown root:postfix /etc/postfix/cacert.pem
chmod 640 /etc/postfix/gnupanel.key
chmod 640 /etc/postfix/gnupanel.crt
chmod 640 /etc/postfix/cacert.pem

rm -f gnupanel.key
rm -f gnupanel.csr
rm -f gnupanel.crt
rm -f cacert.pem



